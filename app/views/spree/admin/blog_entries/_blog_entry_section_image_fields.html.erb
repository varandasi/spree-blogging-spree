<div class="nested-fields sortable-image">
  <%= f.hidden_field :position, class: 'image-position' %>

  <% if !f.object.new_record? %>
    <div class="blog_entry_section_image_thumbnail thumbnail">
      <%= image_tag(f.object.attachment.url(:thumb)) %>
      <%= f.object.attachment_file_name %>
      <br/>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :attachment, "Image" %>
    <%= f.file_field :attachment, :class => 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :alt, Spree.t(:alt_text) %>
    <%= f.text_field :alt , :class => 'form-control' %>
  </div>

  <br>

</div>
